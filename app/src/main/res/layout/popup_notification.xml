<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yellow">

    <TextView
        android:id="@+id/closeTextId"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circle_background"
        android:layout_margin="@dimen/_8sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        android:layout_below="@+id/closeTextId"
        android:layout_marginBottom="@dimen/_16sdp"
        android:id="@+id/linn1Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="@string/you_are_hired_by"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImagePopUpId"
            android:layout_width="140dp"
            android:layout_height="120dp"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/title_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            tools:text="Md. Masum Billah"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            tools:text="Your Phone No."
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            tools:text="Companiganj,Muradnagar,Cumilla"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/call_btn"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/call"
            android:drawableStart="@drawable/call_f"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:background="@drawable/btn_round"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/see_on_map"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/see_on_map"
            android:drawableStart="@drawable/see_on_map"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAllCaps="false"
            android:background="@drawable/btn_round"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_hire"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/cancel_hire"
            android:drawableStart="@drawable/cancel_f"
            android:paddingStart="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAllCaps="false"
            android:background="@drawable/btn_red_round"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
