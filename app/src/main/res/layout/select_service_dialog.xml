<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/service_back"
    android:backgroundTint="@color/clean"
    android:id="@+id/bottomSheet_container">

    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/_16sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/white"
            android:text="@string/select_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_18sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:onClick="selectService"
                android:id="@+id/driver"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/driver"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/electrician"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/electrician"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/ambulance_service"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/ambulance_service"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/tv_setup"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/tv_setup"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/air_cooler_service"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/air_cooler_service"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/home_painting_service"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/home_painting_service"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/cleaning"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/cleaning"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/yellow_50"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:onClick="selectService"
                android:id="@+id/photographer"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/yellow"
                android:text="@string/professional_wedding_photographer"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/white"
            android:text="Select your service brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="0.1dp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_18sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:id="@+id/toyota_tv_id"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="Toyota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:id="@+id/nissan_tv_id"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="Nissan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:id="@+id/honda_tv_id"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="Honda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:id="@+id/hyundai_tv_id"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="Hyundai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:id="@+id/mitsubishi_tv_id"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="Mitsubishi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:id="@+id/mazda_tv_id"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="Mazda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:id="@+id/german_cars_tv_id"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="German cars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/yellow_50"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:id="@+id/all_types_car_tv_id"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:onClick="selectService"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/yellow"
                    android:text="All types car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


    </LinearLayout>



</LinearLayout>